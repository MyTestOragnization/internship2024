@model List<WebApplication1.Models.Game>


<div class="text-center">
    <h1 class="display-4">Games</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Genre
                </th>
                <th>
                    Release
                </th>
                <th>
                    Price $
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var g in Model)
            {
                <tr>
                    <td>
                        @g.Id
                    </td>
                    <td>
                        @g.Name
                    </td>
                    <td>
                        @g.Genre
                    </td>
                    <td>
                        @g.Release
                    </td>
                    <td>
                        @g.Price
                    </td>
                    <td>
                        <a asp-action="DeleteGame" asp-route-id="@g.Id">Delete</a>
                        <a asp-action="EditGame" asp-route-id="@g.Id">Edit</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
<a type="button" class="btn btn-primary" asp-action="AddGame">Dodaj Gre</a>